{
    "app-id" : "com.mattjakeman.Banshee.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "banshee",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.dotnet6"
    ],
    "build-options": {
		"append-path": "/usr/lib/sdk/dotnet6/bin",
		"append-ld-library-path": "/usr/lib/sdk/dotnet6/lib",
		"append-pkg-config-path": "/app/lib/pkgconfig:/app/share/pkgconfig:/usr/lib/sdk/dotnet6/lib/pkgconfig"
	},
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/lib/pkgconfig",
        "/share/man",
        "*.la"
    ],
    "modules" : [
    	{
    		"name": "dotnet-runtime",
    		"buildsystem": "simple",
    		"build-options": {
    			"no-debuginfo": true,
    			"strip": true
    		},
    		"build-commands": [
    			"/usr/lib/sdk/dotnet6/bin/install-sdk.sh"
    		]
    	},
    	{
            "name": "banshee",
            "builddir": true,
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/bin",
                "dotnet publish -c Release banshee.sln",
                "cp -r --remove-destination /run/build/banshee/bin/Release/net6.0/publish/* /app/bin/"
            ],
            "sources": [
                {
                	"type": "git",
                	"url": "https://github.com/gircore/gir.core"
                },
                {
                	"type": "dir",
                	"path": "./"
                }
            ]
        }
    ]
}
